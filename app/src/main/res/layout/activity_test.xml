<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.adamvincze.notesbyday.MainActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/date_bar"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


            <ImageButton
                android:id="@+id/previous_day_button"
                style="?android:borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@string/previous_day_button_desc"
                android:src="@drawable/ic_chevron_left_black_24dp"
                tools:ignore="RtlHardcoded"
                />

            <TextView
                android:id="@+id/current_date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:layout_toRightOf="@id/previous_day_button"
                android:layout_toLeftOf="@id/next_day_button"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:text="Lorem ipsum"
                tools:text="2018 Monthname 1., Dayname, Lorem Ipsum"
                tools:ignore="HardcodedText,RtlHardcoded"
                />

            <ImageButton
                android:id="@+id/next_day_button"
                style="?android:borderlessButtonStyle"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:contentDescription="@string/next_day_button_desc"
                android:src="@drawable/ic_chevron_right_black_24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                tools:ignore="RtlHardcoded"
                />



        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <ListView
        android:id="@+id/daily_notes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/date_bar"
        android:orientation="horizontal"
        />

</RelativeLayout>
